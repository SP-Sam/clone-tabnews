{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Projeto para praticar programação",
  "homepage": "https://github.com/SP-Sam/clone-tabnews#readme",
  "bugs": {
    "url": "https://github.com/SP-Sam/clone-tabnews/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SP-Sam/clone-tabnews.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm run services:up && concurrently --n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m infra/migrations --template-file-name infra/migrations/template/migration-template.ts create -j ts",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up -j ts",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^15.5.10",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^30.0.0",
    "@types/node": "24.10.6",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.0",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "jest": "^29.6.2",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  }
}
