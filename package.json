{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Projeto para praticar programação",
  "homepage": "https://github.com/SP-Sam/clone-tabnews#readme",
  "bugs": {
    "url": "https://github.com/SP-Sam/clone-tabnews/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SP-Sam/clone-tabnews.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently --n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations --template-file-name infra/migrations/template/migration-template.ts create -j ts",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up -j ts",
    "build": "next build",
    "start": "next start",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "npx eslint .",
    "lint:eslint:fix": "npx eslint --fix .",
    "prepare": "husky"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.2.4",
    "dotenv-expand": "12.0.3",
    "next": "16.1.6",
    "node-pg-migrate": "8.0.4",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@babel/preset-env": "7.29.0",
    "@babel/preset-typescript": "7.28.5",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint/js": "9.39.2",
    "@types/async-retry": "1.4.9",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.1",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.13",
    "babel-jest": "30.2.0",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "7.37.5",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jiti": "2.6.1",
    "prettier": "3.8.1",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  }
}
